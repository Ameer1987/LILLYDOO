{% extends 'base.html.twig' %}

{% block body %}
    <h1>Addressbook</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ addressBook.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ addressBook.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ addressBook.lastName }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ addressBook.street }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ addressBook.zip }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ addressBook.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if addressBook.birthday %}{{ addressBook.birthday|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ addressBook.email }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ addressBook.picture }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('addressbook_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('addressbook_edit', { 'id': addressBook.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
